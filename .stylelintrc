{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "layer",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ],
    "selector-max-id": 0,
    "max-nesting-depth": 2,
    "declaration-no-important": true,
    "color-named": "never"
  }
}
